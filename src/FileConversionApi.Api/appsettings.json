{
  "AllowedHosts": "*",
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information",
        "Microsoft.EntityFrameworkCore": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj} {Properties:j}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/log-.txt",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 7,
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] {Message:lj} {Properties:j}{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithEnvironmentName" ]
  },
  "ConnectionStrings": {
    "Default": "Host=localhost;Port=5432;Database=fileconversionapi;Username=postgres;Password=postgres"
  },
  "JwtSettings": {
    "Secret": "CHANGE_THIS_TO_A_SECURE_SECRET_KEY_IN_PRODUCTION_AT_LEAST_32_CHARS",
    "Issuer": "FileConversionApi",
    "Audience": "FileConversionApi",
    "ExpiryMinutes": 60,
    "RefreshTokenExpiryDays": 7
  },
  "PuppeteerSettings": {
    "ExecutablePath": "",
    "Headless": true,
    "Timeout": 30000
  },
  "WebhookSettings": {
    "TimeoutSeconds": 30,
    "MaxRetries": 3,
    "RetryDelayMilliseconds": 1000
  },
  "RateLimiting": {
    "EnableRateLimiting": true,
    "StandardPolicy": {
      "PermitLimit": 100,
      "WindowMinutes": 60
    },
    "ConversionPolicy": {
      "PermitLimit": 50,
      "WindowMinutes": 60
    },
    "AuthPolicy": {
      "PermitLimit": 10,
      "WindowMinutes": 15
    }
  },
  "JobCleanup": {
    "Enabled": true,
    "RunIntervalMinutes": 60,
    "CompletedJobRetentionDays": 7,
    "FailedJobRetentionDays": 30,
    "BatchSize": 100
  },
  "HealthChecks": {
    "DiskSpaceMinimumMB": 100,
    "ChromiumTimeoutSeconds": 30
  },
  "Metrics": {
    "Enabled": true,
    "Endpoint": "/metrics",
    "IncludeHttpMetrics": true,
    "IncludeProcessMetrics": true
  },
  "OpenTelemetry": {
    "EnableTracing": true,
    "ServiceName": "FileConversionApi",
    "OtlpEndpoint": "",
    "ExportToConsole": false,
    "SamplingRatio": 1.0
  },
  "InputValidation": {
    "Enabled": true,
    "MaxFileSizeBytes": 52428800,
    "MaxHtmlContentBytes": 10485760,
    "MaxMarkdownContentBytes": 5242880,
    "UrlValidation": {
      "Enabled": true,
      "UseAllowlist": false,
      "Allowlist": [],
      "Blocklist": [
        "localhost",
        "127.0.0.1",
        "::1",
        "0.0.0.0",
        "*.local",
        "*.localhost",
        "10.*",
        "172.16.*",
        "172.17.*",
        "172.18.*",
        "172.19.*",
        "172.20.*",
        "172.21.*",
        "172.22.*",
        "172.23.*",
        "172.24.*",
        "172.25.*",
        "172.26.*",
        "172.27.*",
        "172.28.*",
        "172.29.*",
        "172.30.*",
        "172.31.*",
        "192.168.*",
        "169.254.*",
        "metadata.google.internal",
        "169.254.169.254"
      ],
      "BlockPrivateIpAddresses": true
    },
    "ContentTypeValidation": {
      "Enabled": true,
      "AllowedHtmlContentTypes": [
        "text/html",
        "text/plain",
        "application/xhtml+xml"
      ],
      "AllowedMarkdownContentTypes": [
        "text/markdown",
        "text/plain",
        "text/x-markdown"
      ],
      "AllowedImageContentTypes": [
        "image/jpeg",
        "image/png",
        "image/gif",
        "image/webp",
        "image/bmp",
        "image/tiff"
      ]
    }
  }
}
