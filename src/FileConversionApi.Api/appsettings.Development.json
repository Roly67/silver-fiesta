{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Information",
        "Microsoft.EntityFrameworkCore": "Information"
      }
    }
  },
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Port=5432;Database=fileconversionapi_dev;Username=postgres;Password=postgres"
  },
  "RateLimiting": {
    "EnableRateLimiting": true,
    "StandardPolicy": {
      "PermitLimit": 1000,
      "WindowMinutes": 60
    },
    "ConversionPolicy": {
      "PermitLimit": 500,
      "WindowMinutes": 60
    },
    "AuthPolicy": {
      "PermitLimit": 100,
      "WindowMinutes": 15
    }
  }
}
