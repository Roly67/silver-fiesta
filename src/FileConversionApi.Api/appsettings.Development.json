{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Information",
        "Microsoft.EntityFrameworkCore": "Information"
      }
    }
  },
  "ConnectionStrings": {
    "Default": "Host=localhost;Port=5432;Database=fileconversionapi_dev;Username=postgres;Password=postgres"
  },
  "RateLimiting": {
    "EnableRateLimiting": true,
    "ExemptAdmins": true,
    "UserSettingsCacheSeconds": 60,
    "StandardPolicy": {
      "PermitLimit": 1000,
      "WindowMinutes": 60
    },
    "ConversionPolicy": {
      "PermitLimit": 500,
      "WindowMinutes": 60
    },
    "AuthPolicy": {
      "PermitLimit": 100,
      "WindowMinutes": 15
    },
    "Tiers": {
      "Free": {
        "StandardPolicy": {
          "PermitLimit": 1000,
          "WindowMinutes": 60
        },
        "ConversionPolicy": {
          "PermitLimit": 200,
          "WindowMinutes": 60
        }
      },
      "Basic": {
        "StandardPolicy": {
          "PermitLimit": 5000,
          "WindowMinutes": 60
        },
        "ConversionPolicy": {
          "PermitLimit": 1000,
          "WindowMinutes": 60
        }
      },
      "Premium": {
        "StandardPolicy": {
          "PermitLimit": 20000,
          "WindowMinutes": 60
        },
        "ConversionPolicy": {
          "PermitLimit": 5000,
          "WindowMinutes": 60
        }
      },
      "Unlimited": {
        "StandardPolicy": {
          "PermitLimit": 1000000,
          "WindowMinutes": 60
        },
        "ConversionPolicy": {
          "PermitLimit": 100000,
          "WindowMinutes": 60
        }
      }
    }
  },
  "AdminSeed": {
    "Enabled": true,
    "Email": "admin@fileconversionapi.local",
    "Password": "Admin123!",
    "SkipIfAdminExists": true
  },
  "UsageQuotas": {
    "Enabled": true,
    "DefaultMonthlyConversions": 10000,
    "DefaultMonthlyBytes": 10737418240,
    "AdminMonthlyConversions": 0,
    "AdminMonthlyBytes": 0,
    "ExemptAdmins": true
  },
  "JobCleanup": {
    "Enabled": true,
    "RunIntervalMinutes": 5,
    "CompletedJobRetentionDays": 1,
    "FailedJobRetentionDays": 3,
    "BatchSize": 50
  },
  "HealthChecks": {
    "DiskSpaceMinimumMB": 50,
    "ChromiumTimeoutSeconds": 60
  },
  "Metrics": {
    "Enabled": true,
    "Endpoint": "/metrics",
    "IncludeHttpMetrics": true,
    "IncludeProcessMetrics": true
  },
  "OpenTelemetry": {
    "EnableTracing": true,
    "ServiceName": "FileConversionApi-Dev",
    "OtlpEndpoint": "",
    "ExportToConsole": false,
    "SamplingRatio": 1.0
  }
}
